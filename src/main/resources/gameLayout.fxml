<?import com.comp2042.GameOverPanel?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.Group?>
<?import javafx.scene.layout.*?>
<?import java.net.URL?>

<StackPane fx:controller="com.comp2042.GuiController"
           xmlns:fx="http://javafx.com/fxml">

    <VBox spacing="10">

        <HBox alignment="CENTER" spacing="20">
            <Label fx:id="scoreLabel" text="Score: 0"
                   layoutX="20" layoutY="20"
                   style="-fx-font-size: 24px; -fx-text-fill: white;"/>

            <Button fx:id="pauseButton"
                    text="Pause"
                    onAction="#pauseGame"
                    layoutX="150" layoutY="20"
                    style="-fx-font-size: 16px;"/>

            <Button fx:id="homeButton"
                    text="Home"
                    onAction="#handleStartMenu"
                    layoutX="230" layoutY="20"
                    style="-fx-font-size: 16px;"/>
        </HBox>

        <Pane>
            <GridPane fx:id="brickPanel"
                      vgap="1" hgap="1"/>
            <HBox spacing="40" alignment="TOP_LEFT">

                <!-- Game Board -->
                <BorderPane styleClass="gameBoard" fx:id="gameBoard">
                    <center>
                        <GridPane fx:id="gamePanel"
                                  hgap="1" vgap="1"
                                  layoutY="30" layoutX="40"/>
                    </center>
                </BorderPane>

                <!-- Right Info Panel -->
                <VBox spacing="10" alignment="TOP_CENTER" style="-fx-padding: 20 0 0 0;">
                    <!-- "NEXT" label -->
                    <Label text="NEXT"
                           style="-fx-font-size: 20px; -fx-font-weight: bold; -fx-text-fill: cyan; -fx-effect: dropshadow(one-pass-box, black, 3, 0, 0, 0);"/>

                    <!-- Next piece box -->
                    <StackPane style="-fx-border-color: lightgray; -fx-border-width: 3; -fx-padding: 8; -fx-background-color: black;"
                               prefWidth="100" prefHeight="300">
                        <GridPane fx:id="nextPiecePanel"
                                  hgap="1" vgap="1"
                                  alignment="CENTER"
                                  minWidth="80" minHeight="80"/>
                    </StackPane>

                    <!-- LEVEL Box -->
                    <VBox alignment="CENTER">
                        <Label text="LEVEL"
                               style="-fx-font-size: 16px; -fx-text-fill: cyan; -fx-font-weight: bold;"/>
                        <StackPane style="-fx-border-color: lightgray; -fx-border-width: 2; -fx-padding: 5; -fx-background-color: black;"
                                   prefWidth="100" prefHeight="35">
                            <Label fx:id="levelLabel"
                                   text="1"
                                   style="-fx-font-size: 16px; -fx-text-fill: white;"/>
                        </StackPane>
                    </VBox>

                    <!-- LINES Box -->
                    <VBox alignment="CENTER">
                        <Label text="LINES"
                               style="-fx-font-size: 16px; -fx-text-fill: cyan; -fx-font-weight: bold;"/>
                        <StackPane style="-fx-border-color: lightgray; -fx-border-width: 2; -fx-padding: 5; -fx-background-color: black;"
                                   prefWidth="100" prefHeight="35">
                            <Label fx:id="linesLabel"
                                   text="0"
                                   style="-fx-font-size: 16px; -fx-text-fill: white;"/>
                        </StackPane>
                    </VBox>
                </VBox>
            </HBox>





            <Group fx:id="groupNotification"
                   layoutX="100" layoutY="203">
                <VBox alignment="CENTER">
                    <GameOverPanel fx:id="gameOverPanel"/>
                </VBox>
            </Group>

        </Pane>

    </VBox>

    <AnchorPane fx:id="startMenu"
                style="-fx-background-color: rgba(0, 0, 0);">

        <VBox alignment="CENTER" spacing="20"
              layoutX="50" layoutY="100">

            <Label text="TETRIS"
                   style="-fx-font-size: 36px; -fx-text-fill: white;"/>

            <Button fx:id="startButton"
                    text="Start Game"
                    onAction="#handleStartGame"
                    prefWidth="200"
                    style="-fx-font-size: 18px;"/>

            <Button fx:id="instructionsButton"
                    text="Instructions"
                    onAction="#handleInstructions"
                    prefWidth="200"
                    style="-fx-font-size: 18px;"/>

            <Button fx:id="exitButton"
                    text="Exit"
                    onAction="#handleExitGame"
                    prefWidth="200"
                    style="-fx-font-size: 18px;"/>

        </VBox>

    </AnchorPane>

    <AnchorPane fx:id="instructionsPane"
                visible="false"
                style="-fx-background-color: rgba(0, 0, 0);">

        <VBox alignment="CENTER" spacing="20"
              layoutX="50" layoutY="50">

            <Label text="HOW TO PLAY"
                   style="-fx-font-size: 32px; -fx-text-fill: white;"/>

            <Label text="← / A : Move Left"
                   style="-fx-font-size: 18px; -fx-text-fill: white;"/>
            <Label text="→ / D : Move Right"
                   style="-fx-font-size: 18px; -fx-text-fill: white;"/>
            <Label text="↑ / W : Rotate"
                   style="-fx-font-size: 18px; -fx-text-fill: white;"/>
            <Label text="↓ / S : Drop Faster"
                   style="-fx-font-size: 18px; -fx-text-fill: white;"/>
            <Label text="P : Pause/Resume"
                   style="-fx-font-size: 18px; -fx-text-fill: white;"/>
            <Label text="N : New Game"
                   style="-fx-font-size: 18px; -fx-text-fill: white;"/>

            <Button text="Back to Menu"
                    onAction="#handleBackToMenu"
                    prefWidth="200"
                    style="-fx-font-size: 16px;"/>

        </VBox>

    </AnchorPane>

    <stylesheets>
        <URL value="@window_style.css"/>
    </stylesheets>

</StackPane>
