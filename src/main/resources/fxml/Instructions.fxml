<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Button?>
<?import javafx.geometry.Pos?>

<VBox fx:controller="com.comp2042.InstructionsController"
      xmlns:fx="http://javafx.com/fxml"
      alignment="CENTER"
      spacing="15"
      style="-fx-background-color: rgba(0,0,0,0.85); -fx-padding: 50;">

    <Label text="HOW TO PLAY"
           style="-fx-font-size: 32px; -fx-text-fill: white; -fx-font-weight: bold;"/>

    <Label text="← / A : Move Left"
           style="-fx-font-size: 18px; -fx-text-fill: white;"/>
    <Label text="→ / D : Move Right"
           style="-fx-font-size: 18px; -fx-text-fill: white;"/>
    <Label text="↑ / W : Rotate"
           style="-fx-font-size: 18px; -fx-text-fill: white;"/>
    <Label text="↓ / S : Drop Faster"
           style="-fx-font-size: 18px; -fx-text-fill: white;"/>
    <Label text="P : Pause/Resume"
           style="-fx-font-size: 18px; -fx-text-fill: white;"/>
    <Label text="N : New Game"
           style="-fx-font-size: 18px; -fx-text-fill: white;"/>

    <Button text="Back to Menu"
            onAction="#handleBackToMenu"
            prefWidth="200"
            style="-fx-font-size: 16px;"/>

</VBox>
