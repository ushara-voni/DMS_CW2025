<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.geometry.Pos?>

<VBox fx:controller="com.comp2042.MainMenuController"
      xmlns:fx="http://javafx.com/fxml"
      alignment="CENTER" spacing="20" style="-fx-background-color: black; -fx-padding: 50;">

    <Label text="TETRIS" style="-fx-font-size: 48px; -fx-text-fill: white; -fx-font-weight: bold;"/>

    <Button fx:id="startButton" text="Start Game" onAction="#handleStartGame"
            prefWidth="200" style="-fx-font-size: 18px;"/>

    <Button fx:id="instructionsButton" text="Instructions" onAction="#handleInstructions"
            prefWidth="200" style="-fx-font-size: 18px;"/>

    <Button fx:id="exitButton" text="Exit" onAction="#handleExit"
            prefWidth="200" style="-fx-font-size: 18px;"/>

</VBox>
