<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Button?>
<?import javafx.geometry.Pos?>
<?import java.net.URL?>

<VBox fx:controller="com.comp2042.GameOverController"
      xmlns:fx="http://javafx.com/fxml"
      alignment="CENTER"
      spacing="20"
      styleClass="root">

    <Label text="GAME OVER" styleClass="label-title"/>
    <Label fx:id="finalScoreLabel" text="Score: 0" styleClass="scoreClass"/>

    <Button fx:id="restartButton" text="Restart" onAction="#handleRestart" styleClass="menu-button" prefWidth="200"/>
    <Button fx:id="backMenuButton" text="Back to Menu" onAction="#handleBackToMenu" styleClass="menu-button" prefWidth="200"/>

    <stylesheets>
        <URL value="@../styles/gameover.css"/>
    </stylesheets>
</VBox>
