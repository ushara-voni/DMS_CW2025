<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Button?>
<?import javafx.geometry.Pos?>

<VBox fx:controller="com.comp2042.GameOverController"
      xmlns:fx="http://javafx.com/fxml"
      alignment="CENTER"
      spacing="20"
      style="-fx-background-color: rgba(0,0,0,0.85); -fx-padding: 50;">

    <Label text="GAME OVER"
           style="-fx-font-size: 48px; -fx-text-fill: red; -fx-font-weight: bold;"/>

    <Label fx:id="finalScoreLabel"
           text="Score: 0"
           style="-fx-font-size: 24px; -fx-text-fill: white;"/>

    <Button fx:id="restartButton"
            text="Restart"
            onAction="#handleRestart"
            prefWidth="200"
            style="-fx-font-size: 18px;"/>

    <Button fx:id="backMenuButton"
            text="Back to Menu"
            onAction="#handleBackToMenu"
            prefWidth="200"
            style="-fx-font-size: 18px;"/>

</VBox>
